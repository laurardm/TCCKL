<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Agendinha Digital - Página Única</title>
  <link rel="stylesheet" href="/css/eagenda.css" />
  <link rel="stylesheet" href="/css/footer.css" />
  <link rel="stylesheet" href="/css/logo.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>

<body>
  <div class="painel-perfil">
    <img src="<%= userImage || '/imagens/perfil.png' %>" alt="Foto do Usuário" class="foto-perfil" />
    <span class="nome-usuario"><%= nomeAluno || 'Nome do Usuário' %></span>
  </div>

  <div class="container" id="pagina-atual">
    <h2 id="data-titulo"><%= selectedDate || 'Nenhuma data selecionada' %></h2>
    <div class="conteudo" id="conteudo-pagina">
      <p>Adicione um recado, evento ou foto para começar.</p>
    </div>
  </div>

  <div class="painel-acoes">
    <button class="btn-navegacao" onclick="voltarPagina()">
      <i class="fa-solid fa-arrow-left"></i> Página Anterior
    </button>

    <% if (tipoUsuario === 'funcionario') { %>
    <div class="botoes-acoes">
      <button class="btn-azul" onclick="abrirModal('Recado')">
        <i class="fa-solid fa-comment"></i> Recado
      </button>
      <button class="btn-azul" onclick="abrirModal('Evento')">
        <i class="fa-solid fa-calendar-days"></i> Evento
      </button>
      <button class="btn-azul" onclick="abrirModal('Foto')">
        <i class="fa-solid fa-camera"></i> Foto
      </button>
    </div>
    <% } %>

    <button class="btn-navegacao" onclick="avancarPagina()">
      Próxima Página <i class="fa-solid fa-arrow-right"></i>
    </button>
  </div>

  <!-- Modal -->
  <div class="modal-bg" id="modal-bg">
    <div class="modal" role="dialog" aria-modal="true" aria-labelledby="modal-title">
      <button class="modal-close" aria-label="Fechar modal" onclick="fecharModal()">&times;</button>
      <h3 id="modal-title"></h3>
      <input type="date" id="modal-date" />
      <textarea id="modal-text" placeholder="Digite aqui..."></textarea>
      <input type="file" id="modal-file" style="display:none;" accept="image/*" />
      <div class="modal-buttons">
        <button onclick="confirmarAdicao()">Adicionar</button>
      </div>
    </div>
  </div>

  <button class="btn-voltar" onclick="window.history.back()">Voltar</button>

  <div id="footer"></div>
  <div id="logo"></div>

  <div id="agenda-data"
       data-agenda-id="<%= agenda_id || '' %>"
       data-recados='<%- JSON.stringify(recadosEventos || []) %>'>
  </div>

  <script>
    const el = document.getElementById('agenda-data');
    window.agendaId = el.getAttribute('data-agenda-id') || null;
    window.pagesData = JSON.parse(el.getAttribute('data-recados') || '[]');
    window.tipoUsuario = "<%= tipoUsuario || '' %>";
  </script>
  <div id="footer"></div>
  <div id="logo"></div>
  <script src="/js/agenda.js"></script>
  <script src="/js/footer.js"></script>
  <script src="/js/logo.js"></script>
</body>
</html>
