<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= tituloPagina || "Recados da turma" %></title>
  <link rel="stylesheet" href="/css/recadosturma.css" />
  <link rel="stylesheet" href="/css/footer.css" />
  <link rel="stylesheet" href="/css/logo.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Questrial&display=swap" rel="stylesheet">
</head>

<body data-nome-turma="<%= encodedNomeTurma %>" data-usuario="<%= tipoUsuario %>">

  <div class="painel-turma">
    <span class="nome-turma">Turma <%= nomeTurma || "Nome da turma" %></span>
  </div>

  <div class="container">
    <h2 id="data-titulo">Nenhuma data selecionada</h2>
    <div id="conteudo-pagina">
      <p>Carregando recados...</p>
    </div>
  </div>

  <div class="painel-acoes">
    <button class="btn-navegacao" onclick="voltarPagina()">
      <i class="fa-solid fa-arrow-left"></i> Página anterior
    </button>

    <% if(tipoUsuario === "funcionario") { %>
      <button class="btn-adicionar" onclick="abrirModalRecado()">
        <i class="fa-solid fa-pen"></i> Adicionar recado
      </button>
    <% } %>

    <button class="btn-navegacao" onclick="avancarPagina()">
      Próxima página <i class="fa-solid fa-arrow-right"></i>
    </button>
  </div>

  <button class="btn-voltar" onclick="window.history.back()">Voltar</button>

  <!-- Modal de adicionar/editar recado -->
  <div id="modal-bg" class="modal-bg">
    <div class="modal">
      <button class="modal-close" onclick="fecharModal()" title="Fechar">&times;</button>
      <h3 id="modal-title">Adicionar recado</h3>
      <form id="modal-form" method="POST">
        <input type="date" name="datar" id="modal-date" required />
        <textarea name="descricao" id="modal-text" placeholder="Digite o recado" required></textarea>
        <div class="modal-buttons">
          <button type="button" class="btn-cancelar" onclick="fecharModal()">Cancelar</button>
          <button type="submit" class="btn-confirmar">Confirmar</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Alerta -->
  <div id="alerta-bg" class="alerta-bg">
    <div class="alerta-box">
      <p id="alerta-msg"></p>
      <button onclick="fecharAlerta()">OK</button>
    </div>
  </div>

  <div id="agenda-data" data-recados='<%- JSON.stringify(conteudos || []) %>'></div>

  <script>
    const el = document.getElementById("agenda-data");
    window.pagesData = JSON.parse(el.getAttribute("data-recados") || "[]");
  </script>

  <script src="/js/footer.js"></script>
  <script src="/js/logo.js"></script>
  <script src="/js/recadosturma.js"></script>
</body>
</html>
