<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= tituloPagina || "Recados da turma" %></title>
  <link rel="stylesheet" href="/css/recadosturma.css" />
  <link rel="stylesheet" href="/css/footer.css" />
  <link rel="stylesheet" href="/css/logo.css" />
</head>

<body>
  <div class="painel-turma">
    <span class="nome-turma">Turma <%= nomeTurma %></span>
  </div>

  <div class="container">
    <% if (conteudos && conteudos.length > 0) { %>
      <ul>
        <% conteudos.forEach(c => { %>
          <li>
            <strong><%= c.data %>:</strong> <%= c.texto %>
            <form action="/turmas/<%= encodedNomeTurma %>/recados/<%= c.cod %>/delete" method="POST" style="display:inline;">
              <button type="submit">Excluir</button>
            </form>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>Nenhum recado cadastrado ainda.</p>
    <% } %>
  </div>

  <div class="painel-acoes">
    <form action="/turmas/<%= encodedNomeTurma %>/recados" method="POST">
      <input type="date" name="datar" value="<%= dataAtual %>" required />
      <input type="text" name="descricao" placeholder="Digite o recado" required />
      <button type="submit">Adicionar recado</button>
    </form>
  </div>

  <button onclick="window.history.back()">Voltar</button>
</body>
</html>
