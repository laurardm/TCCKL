<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= nomeTurma %></title>
  <link rel="stylesheet" href="/css/turmas.css" />
  <link rel="stylesheet" href="/css/logo.css" />
  <link rel="stylesheet" href="/css/footer.css" />
</head>
<body>

  <h1 class="turma-titulo"><%= nomeTurma %></h1>

  <div class="container-alunos">
    <div class="grade-alunos" id="lista-alunos">
      <% if (alunos.length > 0) { %>
        <% alunos.forEach((aluno, index) => { %>
          <div class="aluno" data-cod="<%= aluno.cod %>">
            <img src="<%= aluno.foto || '/imagens/perfil.png' %>" alt="Foto do aluno">
            <span><%= aluno.nome %></span>
          </div>
        <% }) %>
      <% } else { %>
        <p>Nenhum aluno encontrado para esta turma.</p>
      <% } %>
    </div>
  </div>

  <div class="botoes">
    <a href="/turmas"> <button class="btn-voltar">Voltar</button></a>
    <button id="btnFotos" class="botao">Fotos da turma</button>
    <button id="btnAdicionar" class="botao">Adicionar aluno</button>
    <button id="btnEditar" class="botao">Editar alunos</button>
    <button id="btnSalvar" class="botao" style="display:none;">Salvar</button>
  </div>

  <div id="footer"></div>
  <div id="logo"></div>

  <script src="/js/turmas.js"></script>
  <script src="/js/footer.js"></script>
  <script src="/js/logo.js"></script>

</body>
</html>
