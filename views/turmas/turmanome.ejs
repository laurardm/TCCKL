<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Turma <%= nomeTurma %></title>
  <link rel="stylesheet" href="/css/turmas.css" />
  <link rel="stylesheet" href="/css/logo.css" />
  <link rel="stylesheet" href="/css/footer.css" />
</head>
<body>

  <h1 class="turma-titulo">Turma <%= nomeTurma %></h1>

  <div class="container-alunos">
    <div class="grade-alunos">
      <% if (alunos.length > 0) { %>
        <% alunos.forEach(aluno => { %>
          <div class="aluno" data-id="<%= aluno.cod %>">
            <img src="<%= aluno.foto || '/imagens/perfil.png' %>" alt="Foto do aluno">
            <input class="nome-aluno" type="text" value="<%= aluno.nome %>" readonly />
            <button class="btn-editar">Editar</button>
            <button class="btn-salvar" style="display:none;">Salvar</button>
            <button class="btn-excluir">Excluir</button>
          </div>
        <% }) %>
      <% } else { %>
        <p>Nenhum aluno encontrado para esta turma.</p>
      <% } %>
    </div>

    <!-- FormulÃ¡rio para adicionar novo aluno -->
    <form id="form-adicionar-aluno">
      <input type="text" id="novo-nome" placeholder="Nome do aluno" required />
      <button type="submit">Adicionar aluno</button>
    </form>
  </div>

  <div class="botoes">
    <button onclick="history.back()" id="btnVoltar" class="botao">Voltar</button>
    <button id="btnFotos" class="botao">Fotos da turma</button>
  </div>

  <div id="footer"></div>
  <div id="logo"></div>

  <script src="/js/turmas.js"></script>
  <script src="/js/footer.js"></script>
  <script src="/js/logo.js"></script>

</body>
</html>
