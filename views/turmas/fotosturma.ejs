<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Agendinha Digital - Fotos da Turma</title>
  <link rel="stylesheet" href="/css/fotosTurma.css" />
  <link rel="stylesheet" href="/css/logo.css" />
  <link rel="stylesheet" href="/css/footer.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>

<body>
  <div class="painel-turma">
    <span class="nome-turma">Fotos da turma <%= decodeURIComponent(encodedNomeTurma) %></span>
  </div>

  <div class="container">
    <h2 id="data-titulo"></h2>
    <div id="conteudo-pagina">
      <!-- Conteúdo será renderizado pelo JS -->
    </div>
  </div>

  <div class="painel-acoes">
    <button class="btn-navegacao" onclick="voltarPagina()">
      <i class="fa-solid fa-arrow-left"></i> Página Anterior
    </button>
    <% if (tipoUsuario==='func' ) { %>
      <button class="btn-adicionar" onclick="abrirModalImagem()">
        <i class="fa-solid fa-image"></i> Adicionar Imagem
      </button>
    <% } %>
    <button class="btn-navegacao" onclick="avancarPagina()">
      Próxima Página <i class="fa-solid fa-arrow-right"></i>
    </button>
  </div>

  <button class="btn-voltar" onclick="window.history.back()">Voltar</button>

  <!-- Modal -->
  <div id="modal-bg" class="modal-bg">
    <div class="modal">
      <button class="modal-close" onclick="fecharModal()" title="Fechar">&times;</button>
      <h3 id="modal-title">Adicionar</h3>
      <input type="date" id="modal-date" value="<%= dataAtual %>" />
      <input type="file" id="modal-file" name="foto" style="display:none;">
      <div class="modal-buttons">
        <button onclick="confirmarAdicao()">Confirmar</button>
        <button onclick="fecharModal()">Cancelar</button>
      </div>
    </div>
  </div>

  <!-- Dados vindos do servidor -->
<div id="turma-data" 
     data-nome="<%= encodedNomeTurma %>" 
     data-conteudos='<%- JSON.stringify(conteudos) %>' 
     data-tipo="<%= tipoUsuario %>">
</div>

  <div id="footer"></div>
  <div id="logo"></div>
  <script src="/js/footer.js"></script>
  <script src="/js/logo.js"></script>
  <script src="/js/fotosTurma.js"></script>
</body>

</html>
